{% extends 'base.html.twig' %}

{% block title %}Team "{{ team.country.name }}"{% endblock %}

{% block body %}
    <div>
        {{ team.description }}
    </div>
    <div>
        <div class="users-block">
            <h2>Players</h2>
            <ul>
                {% for player in team.players %}
                    <li><a href="{{ path('user_show', {'id': player.id}) }}">{{ player.name }} {{ player.lastName }}</a></li>
                {% endfor %}
            </ul>
        </div>
        <div class="users-block">
            <h2>Coaching Staff</h2>
            <ul>
                {% for coach in team.coaches %}
                    <li><a href="{{ path('user_show', {'id': coach.id}) }}">{{ coach.name }} {{ coach.lastName }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div>
        <h2>Last Games</h2>
        <ul>
            {% for game in games %}
                <li><a href="{{ path('game_show', {'id': game.id}) }}">{{ game.team1.country.name }} vs {{ game.team2.country.name }}</a></li>
            {% endfor %}
        </ul>
    </div>


{% endblock %}