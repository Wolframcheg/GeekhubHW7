<div class="all-users">
    {% for user in users %}
        <p class="item"><a href="{{ path('user_show', {'id': user.id}) }}">{{ user.name }} {{ user.lastName }}</a> -
            {{constant('ROLENAME', user) }}
            - {{ user.team.country.name }}</p>
    {% endfor %}
</div>
{% if nextPage %}
    <div class="pagination" style="display: none">
        <span class="next">
            <a href="{{ path('user_list', {'page': nextPage}) }}">&gt;</a>
        </span>
    </div>
{% endif %}